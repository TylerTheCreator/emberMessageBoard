{{#if addNewpost}}
  <h1>New post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">User</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="description">Type</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="answers">City</label>
          {{input value=answers id="answers"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'postFormShow'}}>New post</button>
{{/if}}
