{{#if updatePostForm}}
  <h4>Update {{post.user}}'s {{post.description}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="user">User</label>
          {{input value=user id="user" placeholder=post.user}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description" placeholder=post.description}}
        </div>

        <div class="form-group">
          <label for="answers">Answer</label>
          {{input value=answers id="answers" placeholder=post.answers}}
        </div>
{{else}}
    <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
